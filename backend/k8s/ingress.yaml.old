# k8s/ingress.yaml
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: roadmap-ingress
  annotations:
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/cors-allow-origin: "http://localhost:3000"
    nginx.ingress.kubernetes.io/cors-allow-methods: "GET, POST, PUT, DELETE, PATCH, OPTIONS"
    nginx.ingress.kubernetes.io/cors-allow-headers: "Content-Type, Authorization"
    nginx.ingress.kubernetes.io/cors-allow-credentials: "true"
spec:
  rules:
  - http:
      paths:
      - path: /auth
        pathType: Prefix
        backend:
          service:
            name: auth-service
            port: 
              number: 5000
      - path: /roadmap
        pathType: Prefix
        backend:
          service:
            name: roadmap-service
            port: 
              number: 5001
      - path: /profile
        pathType: Prefix
        backend:
          service:
            name: profile-service
            port: 
              number: 5002
      - path: /post
        pathType: Prefix
        backend:
          service:
            name: post-service
            port: 
              number: 5003
      - path: /notification
        pathType: Prefix
        backend:
          service:
            name: notification-service
            port: 
              number: 5004
      - path: /chat
        pathType: Prefix
        backend:
          service:
            name: chat-service
            port: 
              number: 5005
      - path: /recommendation
        pathType: Prefix
        backend:
          service:
            name: recommendation-service
            port: 
              number: 5006